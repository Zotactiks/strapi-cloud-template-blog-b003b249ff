{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global Settings",
    "description": "Site-wide settings and navigation."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "discordInviteUrl": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "navLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.nav-link"
    },
    "footerText": {
      "type": "richtext"
    },
    "primaryColor": {
      "type": "string"
    },
    "accentColor": {
      "type": "string"
    }
  }
}
